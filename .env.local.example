# ========================================
# LOCAL DEVELOPMENT ENVIRONMENT SETTINGS
# ========================================
# Copy this file to .env for local development
# These settings are optimized to avoid CSRF/419 errors

APP_NAME=ICT_Learning
APP_ENV=local
APP_KEY=base64:Z6owch/QgCmAsSUidlBJHmJsn9B3Vceej97Ck51lXa4=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ict
DB_USERNAME=root
DB_PASSWORD=1973

# ========================================
# SESSION CONFIGURATION (LOCAL DEV)
# ========================================
# CRITICAL: These settings prevent CSRF/419 errors in local development
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ========================================
# SANCTUM CONFIGURATION (LOCAL DEV)
# ========================================
# Include all possible localhost variations
SANCTUM_STATEFUL_DOMAINS=127.0.0.1:8000,localhost:8000,127.0.0.1:3000,localhost:3000

# ========================================
# CACHE & QUEUE
# ========================================
CACHE_STORE=file
QUEUE_CONNECTION=database

# ========================================
# MAIL (LOG ONLY FOR LOCAL)
# ========================================
MAIL_MAILER=log

# ========================================
# LOGGING
# ========================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ========================================
# IMPORTANT NOTES
# ========================================
# 1. After copying this file to .env, run:
#    php artisan config:clear
#    php artisan cache:clear
#    php artisan serve
#
# 2. If you get 419 errors:
#    - Clear browser cache (Ctrl+Shift+Delete)
#    - Delete sessions: rm -rf storage/framework/sessions/*
#    - Use incognito window
#
# 3. Never commit .env to git - it's already in .gitignore
